[Unit]
Description=Bongosec manager
Wants=network-online.target
After=network.target network-online.target

[Service]
Type=forking
LimitNOFILE=65536
TimeoutSec=45

ExecStart=/usr/bin/env BONGOSEC_HOME_TMP/bin/bongosec-control start
ExecStop=/usr/bin/env BONGOSEC_HOME_TMP/bin/bongosec-control stop
ExecReload=/usr/bin/env BONGOSEC_HOME_TMP/bin/bongosec-control reload

KillMode=process
RemainAfterExit=yes

[Install]
WantedBy=multi-user.target
